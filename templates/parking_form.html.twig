{% extends 'base.html.twig' %}

{% block body %}

<div class="container- fluid p-3 my-3 bg-dark text-white">

    {{ form_start(parkingForm) }} 

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
             <strong>All Good !</strong> Parking and Parking Places Created Successfully !
             <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
             </button>
         </div>
    {% endfor %}

        <div class="row">
            <div class="col-sm-6">
                {{ form_row(parkingForm.name, {'attr':{'class':'form-control' }}) }}
                <br>
                {{ form_row(parkingForm.localisation, {'attr':{'class':'form-control' }}) }}
                <br>
                {{ form_row(parkingForm.nbParkingSpaces, {'attr':{'class':'form-control' }}) }}
                <br>
                {{ form_row(parkingForm.height, {'attr':{'class':'form-control' }}) }}
                <br>
                {{ form_row(parkingForm.width, {'attr':{'class':'form-control' }}) }}
                </div>
        </div>


     <input style="margin-top:30px;" type="submit" value="Create Parking" class="btn btn-primary"> 
    
    {{ form_end(parkingForm) }} 
    
</div>



{% endblock %}